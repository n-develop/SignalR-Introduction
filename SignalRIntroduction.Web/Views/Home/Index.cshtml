@{
    ViewData["Title"] = "Home";
}

<section id="login-screen" class="hero is-fullheight">
    <div class="hero-body">
        <div class="container">
            <div class="columns is-centered">
                <div class="column is-5-tablet is-4-desktop is-3-widescreen">
                    <div class="box" id="login" aria-labelledby="legend">
                        <div asp-validation-summary="All"></div>

                        <div class="field">
                            <label class="label">Username</label>
                            <div class="control has-icons-left">
                                <span class="icon is-small is-left">
                                    <i class="fas fa-user-circle"></i>
                                </span>
                                <input class="input" id="username" aria-label="Username" autofocus required placeholder="Username" />
                            </div>
                        </div>
                        <div class="field">
                            <button class="button is-info" onclick="RegisterUser()">
                                Login
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="chat-ui" class="section is-hidden">
    <div class="container">
        <h1 class="title is-1">Chatroom</h1>
        <div class="tile is-ancestor">
            <div class="tile is-vertical is-parent">
                <div id="chatlog" class="tile box is-child">
                    
                </div>
                <div class="tile is-child">
                    <div class="field has-addons">
                        <div class="control is-expanded has-icons-left">
                            <input class="input is-medium" type="text" name="message" id="message">
                            <span class="icon is-small is-left">
                                <i class="fas fa-keyboard"></i>
                            </span>
                        </div>
                        <div class="control">
                            <button class="button is-medium is-info is-outlined" id="sendButton" type="submit" onclick="sendMessage()">
                                <span class="icon is-medium"><i class="fas fa-paper-plane"></i></span>
                                &nbsp;&nbsp;Send
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="tile">

        </div>
    </div>
</section>

@section Scripts {
    <script src="~/lib/signalr/dist/browser/signalr.js"></script>
    <script src="js/chatroom.js"></script>
}
